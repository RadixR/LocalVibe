<h2>{{ev.title}}</h2>
<p><strong>Date:</strong> {{formatDate ev.eventDate}} at {{ev.startTime}}</p>
<p><strong>Address:</strong> {{ev.address}}</p>
<p>{{ev.description}}</p>
<p><strong>Capacity:</strong> {{ev.capacity}}</p>
{{#if ev.ticketLink}}
  <p><a href="{{ev.ticketLink}}" target="_blank">Buy Tickets</a></p>
{{/if}}

{{#if query.error}}
  <p class="error">{{query.error}}</p>
{{/if}}

{{#if session.userId}}
  <form method="POST" action="/events/{{ev._id}}/rsvp">
    <button type="submit">RSVP</button>
  </form>
  <form method="POST" action="/events/{{ev._id}}/bookmark">
    <button type="submit">Bookmark</button>
  </form>

  <h3>Comments</h3>
  <ul>
    {{#each ev.comments}}
      <li><strong>{{this.name}}</strong> ({{this.timestamp}}): {{this.comment}}</li>
    {{/each}}
  </ul>
  <form method="POST" action="/events/{{ev._id}}/comments">
    <label>Name <input name="name"></label><br>
    <label>Comment <textarea name="comment" required></textarea></label><br>
    <button type="submit">Post Comment</button>
  </form>
{{/if}} 