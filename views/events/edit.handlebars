<h2>Edit Event</h2>

<form action="/events/{{ev._id}}/edit" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" value="{{ev.title}}" required>
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea class="form-control" id="description" name="description" rows="3" required>{{ev.description}}</textarea>
  </div>

  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" class="form-control" id="address" name="address" value="{{ev.address}}" required>
  </div>

  <div class="form-group">
    <label for="eventDate">Date</label>
    <input type="date" class="form-control" id="eventDate" name="eventDate" value="{{ev.eventDate}}" required>
  </div>

  <div class="form-group">
    <label for="startTime">Start Time</label>
    <input type="time" class="form-control" id="startTime" name="startTime" value="{{ev.startTime}}" required>
  </div>

  <div class="form-group">
    <label for="endTime">End Time</label>
    <input type="time" class="form-control" id="endTime" name="endTime" value="{{ev.endTime}}" required>
  </div>

  <div class="form-group">
    <label for="capacity">Capacity</label>
    <input type="number" class="form-control" id="capacity" name="capacity" value="{{ev.capacity}}" required>
  </div>

  <div class="form-group">
    <label for="category">Category</label>
    <select class="form-control" id="category" name="category" required>
      <option value="Music" {{#if (eq ev.category "Music")}}selected{{/if}}>Music</option>
      <option value="Technology" {{#if (eq ev.category "Technology")}}selected{{/if}}>Technology</option>
      <option value="Food" {{#if (eq ev.category "Food")}}selected{{/if}}>Food</option>
      <option value="Sports" {{#if (eq ev.category "Sports")}}selected{{/if}}>Sports</option>
      <option value="Arts" {{#if (eq ev.category "Arts")}}selected{{/if}}>Arts</option>
    </select>
  </div>

  <div class="form-group">
    <label for="tags">Tags (comma-separated)</label>
    <input type="text" class="form-control" id="tags" name="tags" value="{{ev.tags}}" required>
  </div>

  <div class="form-group">
    <label for="ticketLink">Ticket Link (optional)</label>
    <input type="url" class="form-control" id="ticketLink" name="ticketLink" value="{{ev.ticketLink}}">
  </div>

  <button type="submit" class="btn btn-primary">Submit Edit for Review</button>
  <a href="/events/{{ev._id}}" class="btn btn-secondary">Cancel</a>
</form> 