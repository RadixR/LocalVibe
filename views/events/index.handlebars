<h2>Upcoming Events</h2>

{{> search-form searchAction="/events/search" clearAction="/events/search"}}

<ul class="list-unstyled">
  {{#each events}}
    <li class="mb-3 p-3 border rounded event-list-item">
      <h5><a href="/events/{{this._id}}">{{this.title}}</a></h5>
      <p class="mb-1"><small>{{formatDate this.eventDate}} at {{this.startTime}}</small></p>
      <p class="mb-0"><small>Location: {{this.address}}</small></p>
    </li>
  {{else}}
    <p>No events found matching your criteria.</p>
  {{/each}}
</ul>

<style>
.event-list-item a {
  text-decoration: none;
}
</style> 