<h2>Pending Events</h2>
<ul>
  {{#each events}}
    <li>
      <strong>{{this.title}}</strong> by {{this.creatorID}}
      <form method="POST" action="/admin/events/{{this._id}}/approve" style="display:inline">
        <input name="notes" placeholder="Notes">
        <button type="submit">Approve</button>
      </form>
      <form method="POST" action="/admin/events/{{this._id}}/reject" style="display:inline">
        <input name="notes" placeholder="Notes">
        <button type="submit">Reject</button>
      </form>
    </li>
  {{else}}
    <li>No pending events.</li>
  {{/each}}
</ul> 